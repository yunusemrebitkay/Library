<Window x:Class="Library.Notifications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Notifications" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush >
                <GradientStop Color="#ADA996" Offset="0"/>
                <GradientStop Color="#EAEAEA" Offset="0.85"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DataGrid Name="datagridNotifications" Margin="10,10,10,10"/>

    </Grid>
</Window>
